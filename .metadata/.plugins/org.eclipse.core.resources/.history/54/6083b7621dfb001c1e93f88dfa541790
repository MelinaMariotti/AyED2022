/* add elements at the end of the coll*/
template<typename T>
int collAdd(Coll<T>& c,T t,string tToString(T))
{
   addToken(c.s, c.sep, t, tToString(t));
   return tokenCount(c.s, c.sep)-1; //-1 xq arranca de s[0]
}

